<h1>Edit Your Recipe</h1>
<form action="/recipes/<%= @recipe.id %>/edit" method="POST">
<input type="hidden" id="hidden" name="_method" value="PATCH">
    <label>Name: </label>
    <input type="text" name="name" value="<%= @recipe.name %>"><br><br>
    <label>Ingredients: </label>
    <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"><br><br>
    <label>Cook Time:</label>
    <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"><br><br>
    <p><input type="submit" id="submit"></p>
</form>