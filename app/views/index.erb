<!DOCTYPE html>
<html>
  
  <head></head>
  
  <body>
    
    <h1>Recipes</h1>
    
    <% @recipes.each do |recipe| %>
      <h2><%=recipe.name%></h2>
      <p><%=recipe.ingredients%></p>
      <p><%=recipe.cook_time%></p>
      <a href="/recipes/<%=recipe.id%>">See this recipe</a>
    <% end %>
    
  </body>
  
</html>
